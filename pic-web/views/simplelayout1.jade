    body(xmlns:up="http://purl.uniprot.org/core/",class="namespace-uniprot",typeof="schema:WebPage",style="zoom:1;")

        link(rel='stylesheet', type='text/css', media='all', href='/stylesheets/styles.css')
        div(style='min-height: 940px; margin-bottom: -75px;')
            div(id="masthead-container")
                div(class="masthead" style='position: relative; border-bottom: 3px solid #eee;')
                    div(class="namespace-uniprot",id="local-search")
                        form(action='/search/id',id='search-form')
                            div(id="namespace-background",style="vertical-align:middle" )
                                img(src="/images/logo_small.png"  alt="PIC")
                                input(style="width: 500px;height:40px" class='ui-autocomplete-input',id='query',name='q',type='search',placeholder="Patient ID here",onfocus="this.placeholder=''" , onblur="this.placeholder='Patient ID here'",autocomplete='off')
                                a(style="width: 200px;height:40px;" type="button",data-icon="1",class="icon icon-functional button",onclick='OnSearch();return false;') Open Patient view
                                a(style="width: 200px;height:40px;" type="button",id="filter-button",data-icon="8",class="icon icon-functional button",data-toggle="modal",data-target="#filter" ) Advanced search

            script(type='text/javascript').
                function OnSearch(){
                    var searchURL = document.getElementById("query").value;
                    window.open("/search/id/?q=" + searchURL, "_self");

                }



